---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Breach Dashboard - Real-time Security Incident Monitoring">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Source Summary Hero Section -->
    <div id="source-summary-hero"></div>

    <!-- Main Dashboard Content -->
    <div id="dashboard-root"></div>
  </div>
</Layout>

<script>
  import { DashboardApp } from '../components/dashboard/DashboardApp'
  import { SourceSummaryHero } from '../components/dashboard/SourceSummaryHero'
  import { createRoot } from 'react-dom/client'
  import React from 'react'

  // Mount React components
  const dashboardContainer = document.getElementById('dashboard-root')
  if (dashboardContainer) {
    const root = createRoot(dashboardContainer)
    root.render(React.createElement(DashboardApp))
  }

  const heroContainer = document.getElementById('source-summary-hero')
  if (heroContainer) {
    const root = createRoot(heroContainer)
    root.render(React.createElement(SourceSummaryHero))
  }


</script>
