<script>
  import { DashboardApp } from '../components/dashboard/DashboardApp'
  import { createRoot } from 'react-dom/client'
  import React from 'react'
  import { supabase } from '../lib/supabase'
  import { formatAffectedCount } from '../lib/utils'

  // Mount React app
  const container = document.getElementById('dashboard-root')
  if (container) {
    const root = createRoot(container)
    root.render(React.createElement(DashboardApp))
  }

  // Load dashboard stats
  async function loadStats() {
    try {
      console.log('Loading dashboard statistics...')

      // Get breach count (excluding news feeds)
      const { count: totalBreaches, error: countError } = await supabase
        .from('v_breach_dashboard')
        .select('*', { count: 'exact', head: true })
        .in('source_type', ['State AG', 'Government Portal', 'Breach Database', 'State Cybersecurity', 'State Agency', 'API'])

      if (countError) {
        console.error('Error getting breach count:', countError)
        throw countError
      }

      // Get news count
      const { count: totalNews, error: newsError } = await supabase
        .from('v_breach_dashboard')
        .select('*', { count: 'exact', head: true })
        .in('source_type', ['News Feed', 'Company IR'])

      if (newsError) {
        console.error('Error getting news count:', newsError)
        throw newsError
      }

      // Get total affected individuals (sum of all non-null affected_individuals)
      const { data: affectedData, error: affectedError } = await supabase
        .from('v_breach_dashboard')
        .select('affected_individuals')
        .not('affected_individuals', 'is', null)

      if (affectedError) {
        console.error('Error getting affected individuals:', affectedError)
        throw affectedError
      }

      const totalAffected = affectedData?.reduce((sum, item) => sum + (item.affected_individuals || 0), 0) || 0

      // Get latest scraped date
      const { data: latestData, error: latestError } = await supabase
        .from('v_breach_dashboard')
        .select('scraped_at')
        .not('scraped_at', 'is', null)
        .order('scraped_at', { ascending: false })
        .limit(1)

      if (latestError) {
        console.error('Error getting latest scraped date:', latestError)
        throw latestError
      }

      const lastUpdated = latestData?.[0]?.scraped_at || new Date().toISOString()

      // Update the UI
      const totalBreachesEl = document.getElementById('total-breaches')
      const newsCountEl = document.getElementById('news-count')
      const totalAffectedEl = document.getElementById('total-affected')
      const lastUpdatedEl = document.getElementById('last-updated')

      if (totalBreachesEl) {
        totalBreachesEl.innerHTML = (totalBreaches || 0).toLocaleString()
      }

      if (newsCountEl) {
        newsCountEl.innerHTML = `+ ${(totalNews || 0).toLocaleString()} news articles`
      }

      if (totalAffectedEl) {
        totalAffectedEl.innerHTML = formatAffectedCount(totalAffected)
      }

      if (lastUpdatedEl) {
        lastUpdatedEl.innerHTML = new Date(lastUpdated).toLocaleDateString()
      }

      console.log('Dashboard stats loaded:', {
        totalBreaches,
        totalNews,
        totalAffected,
        lastUpdated
      })

    } catch (error) {
      console.error('Failed to load stats:', error)

      // Show error state
      const errorMessages = {
        'total-breaches': 'Error loading',
        'news-count': 'Error loading',
        'total-affected': 'Error loading',
        'last-updated': 'Error loading'
      }

      Object.entries(errorMessages).forEach(([id, message]) => {
        const el = document.getElementById(id)
        if (el) {
          el.innerHTML = message
          el.className = el.className.replace('text-gray-900 dark:text-white', 'text-red-500 dark:text-red-400')
        }
      })
    }
  }

  // Load stats after a short delay to ensure Supabase is initialized
  setTimeout(loadStats, 100)
</script>
